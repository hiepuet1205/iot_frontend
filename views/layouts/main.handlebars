  <script>
    function thoigian() {
      const t = new Date;
      let y = t.getFullYear();
      let mo = t.getMonth() + 1;
      let d = t.getDate();
      let h = t.getHours();
      let m = t.getMinutes();
      let s = t.getSeconds();
      document.getElementById("year").innerHTML = (`Ngày ${d} Tháng ${mo} Năm ${y}`)
      document.getElementById("thoigian").innerHTML = h + ":" + m + ":" + s;
      setTimeout(thoigian, 1000);
    }
